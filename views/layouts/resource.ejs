<section id="resource">
    <h2><%= title %></h2>
    <a target="_blank" href="<%= link.url %>"><%= link.url %></a>

    <% sections.forEach((section, index) => { %>
    <article>
        <h3><%= section.title %>

            <% if (index === 0 || index === 1) { %>
            <%= title %>?
            <% } %>

        </h3>

        <% section.content.forEach(item => { 
        const key = Object.getOwnPropertyNames(item)[0] %>

        <% if (key === 'text') { %>
        <p><%= item.text %></p>
        <% } else if (key ==='link') { %>
        <a target="_blank" href="<%= item.link.url %>"><%= item.link.text %></a>
        <% } %>

        <% }) %>
    </article>
    <% }) %>

    <a class="call_to_action" target="_blank" href="<%= link.url %>"><%= link.text %></a>
</section>